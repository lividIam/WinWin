{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <h1>Product add!</h1>

        {{ form_start(form) }}
            {{ form_row(form.name) }}
            <div id="category">
                <label>Category</label>
                <button id="product_category" type="button">Choose category</button>
            </div>
        {{ form_end(form) }}

        <a href="{{ path('store_dashboard', { 'slug': slug }) }}">Back to store main page</a>
    </div>
        
    {#  POPUP WINDOW (hidden in default) #}
    <div id="popup-wrapper">
      <div id="popup-content" class="animate">

        {#<div id="title-container">
         <span id="close" title="Close PopUp">&times;</span> 
          <h1 style="text-align:center">Choose category</h1>
        </div>#}

        <div class="panel-group" style="cursor: pointer;">
            <div id="first" class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        {# increase clickable area to match outer divs size #}
                        <a data-toggle="collapse" href="#collapse1" style="text-decoration: none;">Choose category</a>
                    </h4>
                </div>
                <div id="collapse1" class="panel-collapse collapse">
                    <ul class="list-group">
                        <li class="list-group-item">One</li>
                        <li class="list-group-item">Two</li>
                        <li class="list-group-item">Three</li>
                    </ul>
                </div>
            </div>
            <div id="second" class="panel panel-default" style="visibility: hidden;">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        {# increase clickable area to match outer divs size #}
                        <a data-toggle="collapse" href="#collapse2" style="text-decoration: none;">Choose category</a>
                    </h4>
                </div>
                <div id="collapse2" class="panel-collapse collapse">
                    <ul class="list-group">
                        <li class="list-group-item">One</li>
                        <li class="list-group-item">Two</li>
                        <li class="list-group-item">Three</li>
                    </ul>
                </div>
            </div>
            <div id="third" class="panel panel-default" style="visibility: hidden;">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        {# increase clickable area to match outer divs size #}
                        <a data-toggle="collapse" href="#collapse3" style="text-decoration: none;">Choose category</a>
                    </h4>
                </div>
                <div id="collapse3" class="panel-collapse collapse">
                    <ul class="list-group">
                        <li class="list-group-item">One</li>
                        <li class="list-group-item">Two</li>
                        <li class="list-group-item">Three</li>
                    </ul>
                </div>
            </div>
        </div>
        

      </div>
    </div>
    {#  POPUP WINDOW END  #}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/manifest.js') }}"></script>
    <script src="{{ asset('build/vendor.js') }}"></script>
    
    {# common scripts and css #}
    <script src="{{ asset('build/app.js') }}"></script>
    
    {# page specific script and css #}
    <script src="{{ asset('build/store_dashboard_product_add.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/product_add_style.css') }}"/>
{% endblock %}